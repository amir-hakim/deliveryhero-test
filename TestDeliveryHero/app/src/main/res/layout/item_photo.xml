<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lContainerPhotosItem"
    android:padding="@dimen/photos_list_item_padding"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/ivThumbPhotosItem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/photos_list_item_height"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/tvTitlePhotosItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:background="#4A000000"
        android:textColor="#ffffff"
        android:padding="@dimen/activity_text_padding"
        android:layout_gravity="bottom"/>
</LinearLayout>
